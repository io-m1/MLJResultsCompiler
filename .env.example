# Environment Variables Template
# Copy this to .env and fill in your values (never commit .env to git)

# Required - Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
MLJCM_BOT_TOKEN=your_cm_bot_token_here

# Required for MLJCM Persistent Scheduling (PostgreSQL)
DATABASE_URL=postgresql://user:password@hostname/dbname

# Required - Random secret string for webhook security
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
WEBHOOK_SECRET=your-long-random-secret-string-here

# Required - Your deployment URL (e.g., https://your-service.onrender.com)
WEBHOOK_BASE_URL=https://your-service.onrender.com
PORT=8000
GROQ_API_KEY=your_groq_api_key_here

# Optional - Keep-alive to prevent free tier hibernation
# Set to "true" to enable periodic self-pings (recommended for free tier)
ENABLE_KEEP_ALIVE=true

# Optional - Keep-alive ping interval in seconds (default: 840 = 14 minutes)
KEEP_ALIVE_INTERVAL=840
